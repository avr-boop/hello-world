                android:layout_height="match_parent"
                android:text="@string/fourteen"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:layout_weight="1"
                tools:ignore="ButtonStyle"
                android:background="@drawable/ripple2"
                />
        </LinearLayout>
        <LinearLayout
